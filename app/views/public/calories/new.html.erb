<%= form_with model: @calory , local: :true do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-md-2">
        <%= render 'public/posts/sidebar' %>
      </div>
      <div class="col-md-10">
        <h4>カロリー計算</h4>
          <table class="table">
            <tbody>
              <tr>
                <td><%= f.label :mets, "自転車" %></td>
                <td>
                  <%= f.select :mets, [['自転車に乗る：8.9km/時',3.5], ['自転車に乗る：15.1km/時',5.8],
                  ['自転車に乗る：16.1-19.2km/時',6.8], ['自転車に乗る：19.3-22.4km/時', 8.0],
                  ['自転車に乗る：22.5-25.6km/時',10.0],['自転車に乗る：25.7-30.6km/時',12.0], ['自転車に乗る：32.2km/時より速い',15.8 ]] %>
                </td>
              </tr>
              <tr>
                <td><%= f.label :minute, "時間" %></td>
                <td><%= f.text_field :minute %>分</td>
              </tr>
              <tr>
                <td><%= f.label :weight, "体重" %></td>
                <td><%= f.text_field :weight %>kg</td>
              </tr>
              <tr>
                <td></td>
                <td><%= f.submit "計算", class: "btn btn-info"%></td>
              </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
<% end %>
