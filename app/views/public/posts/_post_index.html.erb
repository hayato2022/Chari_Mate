<% posts.each do |post| %>
  <div class="row">
    <div class="col-md-11">
      <div class="card mx-auto mt-4 shadow-lg">
        <%= link_to post_path(post.id) do %>
          <%= image_tag post.get_image(200,150), class: "card-img-top"; %>
        <% end %>
        <div class="card-body">
          <div class="row">
            <div class="col-3">
              <%= image_tag post.user.get_profile_image(50,50), class: "mt-3 rounded-circle"; %>
            </div>
            <div class="col-7">
              <% if post.liked_by?(current_user) %>
                <p class="card-text">
                  <%= link_to post_likes_path(post), method: :delete, class: "text-dark" do %>
                    <i class="fas fa-heart"></i><%= post.likes.count %>いいね
                  <% end %>
                  <i class="far fa-comment"></i>コメント<%= post.post_comments.count %>件
                </p>
              <% else %>
                <p class="card-text">
                  <%= link_to post_likes_path(post), method: :post, class: "text-dark" do %>
                    <i class="far fa-heart"></i><%= post.likes.count %>いいね
                  <% end %>
                  <i class="far fa-comment"></i>コメント<%= post.post_comments.count %>件
                </p>
              <% end %>
              <p class="card-text">
                <%= post.body %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>