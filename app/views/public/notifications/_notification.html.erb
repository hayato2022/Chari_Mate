<% visitor = notification.visitor %>
<% visited = notification.visited %>
<div class="col-md-9">
  <div class="form-inline">
    <span>
      <%= link_to user_path(visitor) do %>
        <%= image_tag visitor.get_profile_image(100,100), class: "rounded-circle" %>
      <% end %>
      <strong><%= visitor.name %></strong>さんが
      <% case notification.action %>
        <% when 'follow' then %>
          <%= "あなたをフォローしました" %>
        <% when 'like' then %>
          <%= link_to 'あなたの投稿', notification.post, style: "font-weight: bold;" %>
          <%= "にいいねしました" %>
        <% when 'comment' then %>
          <% if notification.post.user_id == visited.id %>
            <%= link_to 'あなたの投稿', notification.post, style: "font-weight: bold;" %>
          <% else %>
            <span>
              <%= link_to post_path(notification.post) do %>
                <%= image_tag notification.post.user.get_profile_image(100,100), class: "rounded-circle" %>
                <strong>
                  <%= notification.post.user.name + 'さんの投稿' %>
                </strong>
              <% end %>
            </span>
          <%= "にコメントしました" %>
          <% end %>
          <p class="text-muted mb-0">
            <%= PostComment.find_by(id: notification.post_comment_id)&.comment %>
          </p>
      <% end %>
    </span>
    <div class="small text-muted text-right">
      <%= time_ago_in_words(notification.created_at).upcase %>
    </div>
  </div>
</div>