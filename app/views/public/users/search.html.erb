<h4>ユーザー検索</h4>
<%= form_with url: search_users_path, method: :get, local: true do |f| %>
  <%= f.text_field :name, placeholder: 'ユーザーを探す' %>
  <%= f.submit "検索", class: "btn btn-primary btn-sm" %>
<% end %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
          <td>
            <%= link_to user_path(user.id), class: "text-dark" do %>
              <%= image_tag user.get_profile_image(100,100) %>
            <% end %>
          </td>
          <td>
            <%= link_to user_path(user.id), class: "text-dark" do %>
              <%= user.name %>
            <% end %>
          </td>

      </tr>
    <% end %>
  </tbody>
</table>