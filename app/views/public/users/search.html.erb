<div class="container">
  <div class="row mt-4">
    <div class="col-md-2">
      <%= render 'public/posts/sidebar' %>
    </div>
    <div class="col-md-2"></div>
    <div class="col-md-6">
      <h3 class="text-center">ユーザー検索</h3>
      <div class="row">
        <div class="col-md-6 mx-auto my-4">
          <%= form_with url: search_users_path, method: :get, local: true do |f| %>
            <%= f.text_field :name, placeholder: 'ユーザーを探す' %>
            <%= f.submit "検索", class: "btn btn-primary btn-sm " %>
          <% end %>
        </div>
      </div>

      <table class="table table-hover">
        <tbody>
          <% @users.each do |user| %>
            <tr>
                <td>
                  <%= link_to user_path(user.id), class: "text-dark" do %>
                    <%= image_tag user.get_profile_image(60,60), class: "rounded-circle
" %>
                  <% end %>
                </td>
                <td class="pt-4">
                  <%= link_to user_path(user.id), class: "text-dark" do %>
                    <%= user.name %>
                  <% end %>
                </td>

            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>