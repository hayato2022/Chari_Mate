<div class="container">
  <div class="row">
    <h4><%= @user.name %></h4>
  </div>
  <div class="row">
    <div class="col">
      <%= image_tag @user.get_profile_image(100,100) %>
    </div>
    <div class="col">
      <!--フォロワー-->
    </div>
    <div class="col">
      <!--フォロー-->
    </div>
  </div>
  <div class="row">
    <%= @user.introduction %>
  </div>
  <div class="row">
    <% if @user == current_user %>
      <%= link_to "プロフィールを編集", edit_user_path(@user.id), class: "btn btn-outline-secondary" %>
    <% elsif current_user.following?(@user) %>
      <div class="col">
        <%= link_to "フォロー外す", user_relationships_path(@user.id), method: :delete, class: "btn btn-outline-secondary" %>
      </div>
    <% else %>
      <div class="col">
        <%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to "いいねした投稿", likes_user_path(@user), class: "btn btn-light" %>
    </div>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
      <%= link_to post_path(post.id) do %>
        <%= image_tag post.get_image(300,250) %>
      <% end %>
    <% end %>
  </div>
</div>
