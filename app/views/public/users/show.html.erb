<div class="container">
  <div class="row">
    <h4><%= @user.name %></h4>
  </div>
  <div class="row">
    <div class="col">
      <%= image_tag @user.get_profile_image(100,100) %>
    </div>
    <div class="col">
      <%= link_to user_followings_path(@user), class: "text-dark" do %>
        <%= @user.followings.count %>フォロー
      <% end %>
    </div>
    <div class="col">
      <%= link_to user_followers_path(@user), class: "text-dark" do %>
        <%= @user.followers.count %>フォロワー
      <% end %>
    </div>
  </div>
  <div class="row">
    <%= @user.introduction %>
  </div>
  <div class="row">
    <% if @user == current_user %>
      <%= link_to "ユーザー情報を編集", edit_user_path(@user.id), class: "btn btn-outline-secondary" %>
    <% end %>
  </div>
  <div class="row">
    <div class="col">
      <% if @user != current_user %>
        <%= render 'follow_button', user: @user %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to "いいねした投稿", likes_user_path(@user), class: "btn btn-light" %>
    </div>
  </div>
  <div class="row">
    <% @posts.each do |post| %>
      <%= link_to post_path(post.id) do %>
        <%= image_tag post.get_image(300,250) %>
      <% end %>
    <% end %>
  </div>
</div>
