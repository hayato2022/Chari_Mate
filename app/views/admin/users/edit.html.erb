<%= form_with model: @user, url: admin_user_path(@user.id), method: :patch do |f| %>
  <div class="container">
    <div class="row my-4">
      <div class="col-md-2"></div>
      <div class="col-md-10 ">
        <h4><%= @user.name %>さんの会員情報編集</h4>
        <% if @user.errors.any? %>
          <%= @user.errors.count %>件のエラーが発生しました
          <ul class="alert alert-danger" role="alert">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
    <div class="row mb-3">
      <div class="col-md-3"></div>
      <div class="col-md-3">
        <p>ユーザーID</p>
      </div>
      <div class="col-md-6">
        <p><%= @user.id %></p>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3"></div>
      <div class="col-md-3">
        <p><%= f.label :profile_image, "プロフィール画像" %></p>
      </div>
      <div class="col-md-6">
        <p><%= f.file_field :profile_image, accept: "image/*" %></p>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3"></div>
      <div class="col-md-3">
        <%= f.label :name, "ユーザー名" %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :name, class: "rounded" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3"></div>
      <div class="col-md-3">
        <%= f.label :email, "メールアドレス" %>
      </div>
      <div class="col-md-6">
        <%= f.text_field :email, class: "rounded" %>
      </div>
    </div>
    <div class="row mb-4">
      <div class="col-md-3"></div>
      <div class="col-md-3">
        <%= f.label :is_active, "ユーザーステータス" %>
      </div>
      <div class="col-md-6">
        <%= f.radio_button :is_active, 'true' %>
        <%= f.label :is_active, '有効', value: true %>
        <%= f.radio_button :is_active, 'false' %>
        <%= f.label :is_active, '退会(利用停止にする)', value: false %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6"></div>
      <div class="col-md-6">
        <%= f.submit "変更を保存", class: "btn btn-success btn-lg" %>
      </div>
    </div>
  </div>
<% end %>