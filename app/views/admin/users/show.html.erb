<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <div class="col-11 my-4">
      <h3><%= @user.name %>の詳細画面</h3>
    </div>
  </div>
  <div class="row">
    <div class=" col-md-3"></div>
    <div class="col-md-9">
      <div class="row">
        <div class="col-md-1">
          <%= image_tag @user.get_profile_image(100,100), class: "rounded-circle" %>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-3 mt-5">
          <%= link_to admin_user_followings_path(@user), class: "text-dark" do %>
            <%= @user.followings.count %>フォロー
          <% end %>
        </div>
        <div class="col-md-3 mt-5">
          <%= link_to admin_user_followers_path(@user), class: "text-dark" do %>
            <%= @user.followers.count %>フォロワー
          <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
          <div class="row">
            <div class="col-md-8 mb-3">
              <p><%= @user.introduction %></p>
              <%= link_to "ユーザー情報を編集", edit_admin_user_path(@user.id), class: "btn btn-secondary" %>
            </div>
          </div>
        </div>
        <div class="col-md-2"></div>
      </div>
    </div>
    <div class="col-md-1"></div>
  </div>

  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
      <div class="row">
        <% @posts.each do |post| %>
          <div class="col-10 col-md-6 col-lg-4">
           <div class="card mx-auto mt-4 shadow-lg">
            <%= link_to admin_post_path(post.id) do %>
              <%= image_tag post.get_image(300,250), class: "card-img-top"; %>
            <% end %>
               <div class="card-body">
                 <p class="card-text">説明: <%= post.body %></p>
               </div>
           </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-md-1"></div>
  </div>
  <div class="row mt-3">
    <div class="col-md-5"></div>
    <div class="col-md-4 ml-4 text-center">
      <%= paginate @posts %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>