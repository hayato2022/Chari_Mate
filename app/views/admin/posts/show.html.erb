<div class="container">
  <div class="row">
    <div class="col-md-2">
      <%= image_tag @post.user.get_profile_image(100,100), class: "rounded-circle" %>
    </div>
    <div class="col-md-5 pt-5">
      <%= link_to admin_user_path(@post.user.id), class: "text-dark" do %>
        <h4><%= @post.user.name %></h4>
      <% end %>
    </div>
    <div class="col-md-5 mt-5">
      <%= link_to "投稿削除", admin_post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-11 my-3">
      <%= image_tag @post.get_image(900,500) %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-11">
      <p><%= l @post.created_at, format: :japanese %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-2">
      <p><i class="fas fa-heart"></i><%= @post.likes.count %>いいね</p>
    </div>
    <div class="col-md-9">
      <p><i class="far fa-comment"></i>コメント<%= @post.post_comments.count %>件</p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-11">
      <p><%= @post.body %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-11">
      <% @post_tags.each do |tag| %>
        <%= link_to admin_posts_path(tag_id: tag.id), class: "btn btn-info" do %>
          <%= tag.name %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="row ">
    <div class="col-md-1"></div>
    <div class="col-md-8 border-bottom border-dark py-3">
      <!--撮影場所-->
        <h4>撮影場所</h4>
        <div id='map'></div>

        <style>
        #map {
          height: 350px;
          width: 80%;
        }
        </style>

        <!-- js部分 -->
        <script>
        //初期マップの設定
        let map
        let marker
        function initMap(){
          geocoder = new google.maps.Geocoder()

          map = new google.maps.Map(document.getElementById('map'), {
            center:  {lat: <%= @post.lat %>, lng: <%= @post.lng %>},
            zoom: 15,
          });

           marker = new google.maps.Marker({
            position:  {lat: <%= @post.lat %>, lng: <%= @post.lng %>},
            map: map
          });
        }
        </script>
        <script src="https://maps.googleapis.com/maps/api/js?key=<%= ENV['API'] %>&callback=initMap" async defer></script>
    </div>
  </div>

  <% @post.post_comments.each do |post_comment| %>
  <div class="row mt-3">
    <div class="col-md-1"></div>
    <div class="col-md-1">
      <%= image_tag post_comment.user.get_profile_image(60,60), class: "rounded-circle" %>
    </div>
    <div class="col-md-4">
      <%= link_to admin_user_path(post_comment.user.id), class:"text-dark" do %>
        <%= post_comment.user.name %>
      <% end %>
      <%= l post_comment.created_at %>
      <p><%= post_comment.comment %></p>
    </div>
    <div class="col-md-4">
      <%= link_to "コメント削除", admin_post_post_comment_path(@post, post_comment), method: :delete, data: {confirm: '本当に削除しますか'}, class: "btn btn-danger" %>
    </div>
  </div>
  <% end %>
</div>